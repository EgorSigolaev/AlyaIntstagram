<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_story"
    android:layout_width="@dimen/story_width"
    android:layout_height="@dimen/story_height"
    android:layout_alignParentStart="true"
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="9dp"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="@dimen/story_width"
        android:layout_height="@dimen/story_image_height">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewMyProfile"
            android:layout_width="@dimen/story_width"
            android:src="@drawable/ic_avatar"
            android:layout_height="@dimen/story_image_height"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewAddStory"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_add_story"/>


    </RelativeLayout>



    <TextView
        android:id="@+id/textViewProfileName"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/your_story" />

</LinearLayout>